@model IEnumerable<Message>
@{
    ViewData["Title"] = "MessageBox";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
 
 

<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Gelen Mesajlar</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary">
            <h6 class="m-0 font-weight-bold text-white">Mesajlar</h6>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th>Gönderen</th>
                                <th>Konu</th>
                                <th>İçerik</th>
                                <th>Tarih</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var msg in Model)
                            {
                                <tr>
                                    <td>@msg.Name</td>
                                    <td>@msg.Surname</td>
                                    <td>@msg.Subject</td>
                                    <td>@msg.Body</td>
                                    @* <td>@msg.CreatedDate.ToString("g")</td> *@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">Henüz hiç mesaj yok.</div>
            }
        </div>
    </div>
</div>

 

