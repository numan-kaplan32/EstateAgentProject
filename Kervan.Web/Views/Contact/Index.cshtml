@model Message
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<div class="contact-page section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-heading">
                    <h6>| İletişime geçin</h6>
                    <h2>Bizimle Hemen İletişime Geçin</h2>
                </div>


                <div class="row">
                    <div class="col-lg-12">
                        <div class="item phone">
                            <img src="assets/images/phone-icon.png" alt="" style="max-width: 52px;">
                            <h6>532-280-5918<br><span>Telefon numarası</span></h6>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="item email">
                            <img src="assets/images/email-icon.png" alt="" style="max-width: 52px;">
                            <h6>kervanemlak@hotmail.com<br><span>İş yeri mail adresi</span></h6>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <form id="contact-form" action="/Contact/MessageCreate" method="post">
                    <div class="row">
                @if(TempData["Empty"] != null)
                {
                    <div class="alert alert-danger text-center fw-bold">
                        @TempData["Empty"]
                    </div>
                }
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-center fw-bold">@TempData["Success"]</div>
                }
                      
                        <div class="col-lg-12">
                            <fieldset>
                                <label for="name">İsim</label>
                                <input type="text" name="Name" id="name" placeholder="İsminiz..." autocomplete="on" required>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <label for="surname">Soyisim</label>
                                <input type="text" name="Surname" id="surname" placeholder="Soyisminiz..." autocomplete="on" required>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <label for="email">Mail</label>
                                <input type="email" name="Email" id="email" placeholder="Mail adresiniz..." required>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <label for="subject">Konu</label>
                                <input type="text" name="Subject" id="subject" placeholder="Konu..." autocomplete="on">
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <label for="message">Mesaj</label>
                                <textarea name="Body" id="message" placeholder="Mesajınızı girin"></textarea>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <button type="submit" id="form-submit" class="orange-button">Gönder</button>
                            </fieldset>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-lg-12 mt-5">
                <div id="map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12031.26420604846!2d28.789155!3d41.10388!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14caaf15bb27d74d%3A0xf3976d16e2ef7e5f!2sKervan%20Emlak!5e0!3m2!1str!2str!4v1717345000000!5m2!1str!2str" 
                            width="100%"
                            height="500px"
                            frameborder="0"
                            style="border:0; border-radius: 10px; box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.15);"
                            allowfullscreen="">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</div>
